@model SpotDemo.Models.Cricketer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cricketer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <input asp-for="PlayerId" class="form-control" readonly/>
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Runs" class="control-label"></label>
                <input asp-for="Runs" class="form-control" />
                <span asp-validation-for="Runs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Centuries" class="control-label"></label>
                <input asp-for="Centuries" class="form-control" />
                <span asp-validation-for="Centuries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wickets" class="control-label"></label>
                <input asp-for="Wickets" class="form-control" />
                <span asp-validation-for="Wickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FiveFors" class="control-label"></label>
                <input asp-for="FiveFors" class="form-control" />
                <span asp-validation-for="FiveFors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        @ViewBag.message
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
